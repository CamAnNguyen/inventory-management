<%= employee_breadcrumb do %>
  <%= t '.address.header', id: @address.id %>
<% end %>

<div class='w-full'>
  <%= form_for @address,
    url: address_fix_path(@address.id), method: :post,
    html: { class: 'mx-auto bg-white shadow-md rounded-md p-8 max-w-md' } do |form|
  %>
    <div class='md:flex md:items-center mb-6'>
      <div class="md:w-1/4">
        <%= form.label :street_1,
          class: 'block font-bold md:text-left mb-1 md:mb-0 pr-4',
          for: 'inline-street_1' %>
      </div>
      <div class="md:w-3/4">
        <%= form.text_field :street_1,
          id: 'inline-street_1',
          class: 'border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500',
          disabled: !@fixable %>
      </div>
    </div>

    <div class='md:flex md:items-center mb-6'>
      <div class="md:w-1/4">
        <%= form.label :street_2,
          class: 'block font-bold md:text-left mb-1 md:mb-0 pr-4',
          for: 'inline-street_2' %>
      </div>
      <div class="md:w-3/4">
        <%= form.text_field :street_2,
          id: 'inline-street_2',
          class: 'border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500',
          disabled: !@fixable %>
      </div>
    </div>

    <div class='md:flex md:items-center mb-6'>
      <div class="md:w-1/4">
        <%= form.label :city,
          class: 'block font-bold md:text-left mb-1 md:mb-0 pr-4',
          for: 'inline-city' %>
      </div>
      <div class="md:w-3/4">
        <%= form.text_field :city,
          id: 'inline-city',
          class: 'border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500',
          disabled: !@fixable %>
      </div>
    </div>

    <div class='md:flex md:items-center mb-6'>
      <div class="md:w-1/4">
        <%= form.label :state,
          class: 'block font-bold md:text-left mb-1 md:mb-0 pr-4',
          for: 'inline-state' %>
      </div>
      <div class="md:w-3/4">
        <%= form.text_field :state,
          id: 'inline-state',
          class: 'border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500',
          disabled: !@fixable %>
      </div>
    </div>

    <div class='md:flex md:items-center mb-6'>
      <div class="md:w-1/4">
        <%= form.label :zip,
          class: 'block font-bold md:text-left mb-1 md:mb-0 pr-4',
          for: 'inline-zip' %>
      </div>
      <div class="md:w-3/4">
        <%= form.text_field :zip,
          id: 'inline-zip',
          class: 'border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500',
          disabled: !@fixable %>
      </div>
    </div>

    <%= form.submit t('.fix_address'),
      disabled: !@fixable,
      class: "p-2 rounded-md w-full focus:shadow-outline focus:outline-none font-bold cursor-pointer #{fix_address_button_class(@fixable)}" %>
  <% end %>
</div>
