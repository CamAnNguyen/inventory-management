<div class='w-full'>
  <%= form_for :registration, url: sign_up_path, method: :post, html: { class: 'mx-auto bg-white shadow-md rounded-md p-8 max-w-xs' } do |form| %>
    <%= form.label :access_code, class: 'font-semibold mb-1 block' %>
    <%= form.text_field :access_code, class: 'border appearance-none shadow w-full p-2 mb-4 text-center' %>

    <%= form.label :name, class: 'font-semibold mb-1 block' %>
    <%= form.text_field :name, class: 'border appearance-none shadow w-full p-2 mb-4 text-center' %>

    <%= form.label :role, class: 'font-semibold mb-1 block' %>
    <%=
      form.select :role,
        options_for_select(@roles),
        {}, 
        { class: 'border appearance-none shadow w-full p-2 mb-4 text-center' }
    %>

    <%= form.submit class: 'p-2 rounded-md w-full text-white bg-teal-700 cursor-pointer' %>
  <% end %>
</div>
